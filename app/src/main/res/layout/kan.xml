<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"
                    android:textSize="24dp"
                    android:textColor="#000000"
                    android:text="Династия"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-190dp"
                    android:src="@drawable/din"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-190dp"
                    android:text="3000 рублей"
                    android:textSize="24dp"
                    android:textColor="#000000"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"
                    android:textSize="24dp"
                    android:textColor="#000000"
                    android:text="Гостевой Дом Solar"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-190dp"
                    android:src="@drawable/solar"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-190dp"
                    android:text="2461 рублей"
                    android:textSize="24dp"
                    android:textColor="#000000"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"
                    android:textSize="24dp"
                    android:textColor="#000000"
                    android:text="Орион"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-190dp"
                    android:src="@drawable/orion"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-190dp"
                    android:text="2390 рублей"
                    android:textSize="24dp"
                    android:textColor="#000000"
                    android:layout_gravity="center"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:onClick="b"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/roboto"
                    android:textColorHint="#F6F6F9"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:hint="Назад"
                    android:background="@drawable/knopka"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>